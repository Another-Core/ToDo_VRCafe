<main class="app-main">
    <!-- FILTERS -->
    <section class="filters">
        <div class="filters-row">
            <!-- STATUS FILTER -->
            <select id="statusFilter" onchange="changeStatusFilter(this.value)">
                <option value="all"       data-i18n="allTasks">All tasks</option>
                <option value="completed" data-i18n="completed">Completed</option>
                <option value="active"    data-i18n="active">Not completed</option>
            </select>

            <!-- CATEGORY FILTER -->
            <select id="categoryFilter" onchange="changeCategoryFilter(this.value)">
                <option value="all" data-i18n="allCategories">All categories</option>
                <option value="Work" data-i18n="work">Work</option>
                <option value="Personal" data-i18n="personal">Personal</option>
                <option value="FreeTime" data-i18n="freeTime">Free time</option>
            </select>
        </div>

        <!-- GLOBAL PROGRESS BAR -->
        <div class="progress-bar-wrapper">
            <span data-i18n="progress">Progress</span>:
            <span id="globalProgressText">0 / 0</span>
            <div class="progress-bar">
                <div id="globalProgressFill"></div>
            </div>
        </div>
    </section>


    <!-- FORM TO MAKE TASK -->
    <section class="task-form">
        <!-- TEXT -->
        <input
        type="text"
        id="taskInput"
        data-i18n-placeholder="newTaskPlaceholder"
        placeholder="New task..."
        required
        >

        <!-- CATEGORY CHOICE -->
        <select id="taskCategory">
            <option value="Work" data-i18n="work">Work</option>
            <option value="Personal" data-i18n="personal">Personal</option>
            <option value="FreeTime"  data-i18n="freeTime">Free time</option>
        </select>

        <!-- BUTTON ADD -->
        <button type="button" data-i18n="addTask" onclick="addTaskFromUI()">Add</button>
    </section>


    <!-- SECTION DISPLAY -->
    <section class="categories">

        <!-- WORK -->
        <section class="category-block" data-category="Work">
            <header class="category-header">
                <h2 data-i18n="work">Work</h2>
                <span class="category-progress" id="workProgress">0 / 0</span>
            </header>
            <div class="task-list" id="workTasks" data-category="Work"></div>
        </section>

        <!-- PERSONAL -->
        <section class="category-block" data-category="Personal">
            <header class="category-header">
                <h2 data-i18n="personal">Personal</h2>
                <span class="category-progress" id="personalProgress">0 / 0</span>
            </header>
            <div class="task-list" id="personalTasks" data-category="Personal" data-category="Personal"></div>
        </section>

        <!-- FREE TIME -->
        <section class="category-block" data-category="FreeTime">
            <header class="category-header">
                <h2 data-i18n="freeTime">Free time</h2>
                <span class="category-progress" id="freeTimeProgress">0 / 0</span>
            </header>
            <div class="task-list" id="freeTimeTasks" data-category="FreeTime"></div>
        </section>

    </section>

    <!-- MOVE FOR PHONE -->
    <dialog id="moveDialog" class="move-dialog">
        <h3 data-i18n="moveTask">Move task</h3>

        <select id="moveSelect">
            <option value="Work">Work</option>
            <option value="Personal">Personal</option>
            <option value="FreeTime">Free time</option>
        </select>

        <div class="move-actions">
            <button id="moveConfirm" class="btn btn-accent">
                <span data-i18n="confirm">Confirm</span>
            </button>

            <button onclick="document.getElementById('moveDialog').close()"
                class="btn btn-ghost">
                <span data-i18n="cancel">Cancel</span>
            </button>
        </div>
    </dialog>

</main>