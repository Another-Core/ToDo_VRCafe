<main class="app-main">

        <section class="filters">
            <div class="filters-row">
                <select id="statusFilter" onchange="changeStatusFilter(this.value)">
                    <option value="all"       data-i18n="allTasks">All tasks</option>
                    <option value="completed" data-i18n="completed">Completed</option>
                    <option value="active"    data-i18n="active">Not completed</option>
                </select>

                <select id="categoryFilter" onchange="changeCategoryFilter(this.value)">
                    <option value="all"        data-i18n="allCategories">All categories</option>
                    <option value="Werk"       data-i18n="work">Work</option>
                    <option value="Persoonlijk" data-i18n="personal">Personal</option>
                    <option value="Vrije tijd" data-i18n="freeTime">Free time</option>
                </select>

                <div class="category-visibility">
                    <button type="button" onclick="setVisibleCategory('all')">
                        <span data-i18n="allCategories">All categories</span>
                    </button>
                    <button type="button" onclick="setVisibleCategory('Werk')">
                        <span data-i18n="work">Work</span>
                    </button>
                    <button type="button" onclick="setVisibleCategory('Persoonlijk')">
                        <span data-i18n="personal">Personal</span>
                    </button>
                    <button type="button" onclick="setVisibleCategory('Vrije tijd')">
                        <span data-i18n="freeTime">Free time</span>
                    </button>
                </div>
            </div>

            <div class="progress-bar-wrapper">
                <span data-i18n="progress">Progress</span>:
                <span id="globalProgressText">0 / 0</span>
                <div class="progress-bar">
                    <div id="globalProgressFill"></div>
                </div>
            </div>
        </section>


        <!-- ФОРМА ДОБАВЛЕНИЯ ЗАДАЧИ -->
        <section class="task-form">
            <input
                type="text"
                id="taskInput"
                data-i18n-placeholder="newTaskPlaceholder"
                placeholder="New task..."
                required
            >

            <select id="taskCategory">
                <option value="Werk"        data-i18n="work">Work</option>
                <option value="Persoonlijk" data-i18n="personal">Personal</option>
                <option value="Vrije tijd"  data-i18n="freeTime">Free time</option>
            </select>

            <button type="button" data-i18n="addTask" onclick="addTaskFromUI()">Add</button>
        </section>


        <!-- КАТЕГОРИИ / СПИСКИ ЗАДАЧ -->
        <section class="categories">

            <!-- WERK -->
            <section class="category-block" data-category="Werk">
                <header class="category-header">
                    <h2 data-i18n="work">Work</h2>
                    <span class="category-progress" id="werkProgress">0 / 0</span>
                </header>
                <div class="task-list" id="werkTasks"></div>
            </section>

            <!-- PERSOONLIJK -->
            <section class="category-block" data-category="Persoonlijk">
                <header class="category-header">
                    <h2 data-i18n="personal">Personal</h2>
                    <span class="category-progress" id="persoonlijkProgress">0 / 0</span>
                </header>
                <div class="task-list" id="persoonlijkTasks"></div>
            </section>

            <!-- VRIJE TIJD -->
            <section class="category-block" data-category="Vrije tijd">
                <header class="category-header">
                    <h2 data-i18n="freeTime">Free time</h2>
                    <span class="category-progress" id="vrijeTijdProgress">0 / 0</span>
                </header>
                <div class="task-list" id="vrijeTijdTasks"></div>
            </section>

        </section>

    </main>